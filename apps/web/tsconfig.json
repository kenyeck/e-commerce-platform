{
   "exclude": ["node_modules"],
   "extends": "@repo/typescript-config/nextjs.json",
   "compilerOptions": {
      "outDir": "dist",
      "plugins": [
         {
            "name": "next"
         }
      ],
      "paths": {
         "@common/*": ["./src/common/*"],
         "@components/*": ["./src/components/*"],
         "@models/*": ["./src/models/*"],
         "@lib/*": ["./src/lib/*"]
      }
   },
   "include": ["src", "next.config.ts", "next-env.d.ts", ".next/types/**/*.ts"]
}
